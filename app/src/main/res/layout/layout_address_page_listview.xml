<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            >
                <ImageView
                    android:id="@+id/iv_address_choose"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/tv_user_name_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_address_choose"
                    android:text="晨明"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/tv_address_detail_bottom"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_toEndOf = "@+id/tv_user_name_bottom"
                    android:padding="5dp"
                    android:maxLines="2"
                    android:layout_marginEnd="5dp"
                    android:text="四川省成都市双流区"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"
            />
</LinearLayout>
