<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:background="@color/colorLightBlue8"
    android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_menu_all_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_all_product"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/bt_mall1"
                    />
                <TextView
                    android:id="@+id/tv_all_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="商城"
                    android:textSize="14sp"
                     />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_menu_classify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="2dp"
                    android:id="@+id/iv_menu_classify"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/bt_classify2"
                    />
                <TextView
                    android:id="@+id/tv_menu_classify"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="分类"
                    android:textSize="14sp"
                     />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_menu_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_menu_found"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/bt_explore"
                    />
                <TextView
                    android:id="@+id/tv_menu_found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="发现"
                    android:textSize="14sp"
                     />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_menu_myself"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_menu_myself"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/bt_user"
                    />
                <TextView
                    android:id="@+id/tv_menu_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我的"
                    android:textSize="14sp"
                     />
        </LinearLayout>
</LinearLayout>